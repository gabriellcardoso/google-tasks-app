{
  "name": "google-tasks-app",
  "version": "0.1.0",
  "description": "This application is a Material Design basic version of the Google Tasks.",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack",
    "dev": "./node_modules/.bin/webpack-dev-server",
    "dev-test": "npm test -- --watchAll",
    "start": "./node_modules/.bin/http-server -a localhost -p 8080",
    "test": "./node_modules/.bin/jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriellcardoso/google-tasks-app.git"
  },
  "keywords": [
    "google",
    "tasks",
    "app"
  ],
  "author": "gabriellcardoso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabriellcardoso/google-tasks-app/issues"
  },
  "homepage": "https://github.com/gabriellcardoso/google-tasks-app#readme",
  "dependencies": {
    "awesome-typescript-loader": "^5.0.0",
    "es6-shim": "^0.35.3",
    "material-ui": "^0.20.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^3.0.0",
    "redux-thunk": "^2.2.0",
    "typescript": "^2.8.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/es6-shim": "^0.31.36",
    "@types/jest": "^22.2.3",
    "@types/material-ui": "^0.21.1",
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^5.0.16",
    "@types/react-test-renderer": "^16.0.1",
    "@types/redux": "^3.6.0",
    "@types/redux-test-utils": "^0.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "http-server": "^0.11.1",
    "jest": "^22.4.3",
    "prop-types": "^15.6.1",
    "react-test-renderer": "^16.3.2",
    "redux-test-utils": "^0.2.2",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^22.4.4",
    "webpack-dev-server": "^3.1.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "verbose": true,
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js"
  }
}
